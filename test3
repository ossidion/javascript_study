function countTheCapitals(string) {

    let counter = 0

    let strList = string.split("")
    
    for (let i = 0; i < strList.length; i++) {
        if (strList[i] === " ") {
            counter += 0
        }
        else if (strList[i] === strList[i].toUpperCase()) {
            counter += 1
        }
    }
    return console.log(counter)

}




countTheCapitals("a");
// should return 0

countTheCapitals("A");
// should return 1

countTheCapitals("NORTHCODERS");
// should return 11

countTheCapitals("Hello there WORLD");
// should return 6

countTheCapitals("");
// should return 0